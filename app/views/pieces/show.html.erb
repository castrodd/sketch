<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @piece.title %>
</p>

<p>
  <strong>Url:</strong>
  <%= image_tag @piece.url %>
</p>

<h2>Comments</h2>
<% @piece.comments.each do |comment| %>

  <p>
    <strong>Comment:</strong>
    <%= comment.comment %>
  </p>
<% end %>


<%= link_to 'Edit', edit_piece_path(@piece) %> |
<%= link_to 'Back', pieces_path %>
